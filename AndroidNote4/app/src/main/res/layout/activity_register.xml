<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.androidnote4.RegisterActivity">
    <FrameLayout
        android:id="@+id/de_frm_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/de_img_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/note_background" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="2">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/txtTopRight"
                android:layout_width="156dp"
                android:layout_height="12dp"
                android:layout_gravity="right"
                android:layout_weight="100"
                android:text=" 注册新账号"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="100" />
            <TextView
                android:id="@+id/txtErrorLog"
                android:layout_width="156dp"
                android:layout_height="12dp"
                android:layout_gravity="right"
                android:layout_weight="100"
                android:text=" "
                android:textAlignment="textStart"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="200">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="30"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/name_group"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="339dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入用户名"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="viewStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="18dp"
                        android:theme="@style/AlertDialog.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_group"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="339dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="viewStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="18dp"
                        android:theme="@style/AlertDialog.AppCompat" />
                </LinearLayout>

                <!--用户密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="290dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入邮箱"
                        android:lines="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="textStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="18dp"
                        android:theme="@style/AlertDialog.AppCompat" />
                </LinearLayout>

                <!--用户密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="290dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入电话号码"
                        android:lines="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="textStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="18dp"
                        android:theme="@style/AlertDialog.AppCompat" />
                </LinearLayout>

                <!--期望加入的群组编号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editGroup"
                        android:layout_width="290dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入群组编号(空或0表示不加入任何群组)"
                        android:lines="1"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="textStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="12dp"
                        android:theme="@style/AlertDialog.AppCompat" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_weight="100" />
        </LinearLayout>

        <!--选择头像的区域-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:visibility="visible">

            <TextView
                android:layout_width="10dp"
                android:layout_weight="10000"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_1" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_2" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_3" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_4" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_5" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_6" />
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/headIcon7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="90"
                android:elevation="0dp"
                app:srcCompat="@drawable/head_icon_7" />


            <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100" />

         </LinearLayout>

        <!--头像和按钮的占位-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="130"
            android:orientation="horizontal"
            android:visibility="visible">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="30"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnConfirmRegister"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="完成"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/deleteSpace1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="      " />

                <Button
                    android:id="@+id/btnBackLogin"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="0dp"
                    android:text="取消"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="80">

            <TextView
                android:id="@+id/testDeleteLog1"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
