<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/de_frm_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/de_img_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/note_background" />
    </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="152"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_weight="120"
            android:id="@+id/ll_0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="200" />

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="100"
                android:text="    注册/登录"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_weight="100" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="125"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="115"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_weight="100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="30"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="25"
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="339dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入用户名"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="viewStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="18dp"
                        android:theme="@style/AlertDialog.AppCompat" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="25"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="325dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="viewStart"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textCursorDrawable="@drawable/note_background"
                        android:textSize="18dp"
                        android:theme="@style/AlertDialog.AppCompat" />

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:background="@drawable/note_background"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"/>
            </LinearLayout>

            <View
                android:layout_weight="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="352dp"
        android:layout_height="match_parent"
        android:layout_weight="150"></LinearLayout>

        <LinearLayout
            android:layout_weight="120"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_weight="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:orientation="horizontal"                 >

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="登录"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/deleteSpace1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="      " />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="0dp"
                    android:text="注册"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_weight="100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/testDeleteLog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
